
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <script src="~/Scripts/lib/angular.js"></script>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet">
        <link href="~/Content/alertify/alertify.core.css" rel="stylesheet">
        <link href="~/Content/alertify/alertify.default.css" rel="stylesheet">
        <script src="~/Scripts/lib/jquery-1.9.1.js"></script>
        <script src="~/Scripts/lib/jquery.signalR-2.2.1.js"></script>
        <script src="~/Scripts/app.js"></script>
        <script src="~/Scripts/lib/alertify/alertify.min.js"></script>
        <script src="~/Scripts/Controllers/adminController.js"></script>
        <script src="~/Scripts/Services/signalrService.js"></script>
        <script src="~/Scripts/Services/signalrService.js"></script>
        <meta name="viewport" content="width=device-width" />
        <title>Admin</title>
    </head>
<body ng-app="binaryOptions" ng-controller="adminController">
    <header>
        <center>
            <h2>Admin Panel</h2>
        </center>
    </header>
    <div class="panel panel-primary">
        <div class="panel-heading navbar-inverse">Create Accounts</div>
        <div class="panel-body">
            <div class="form-inline">
                <div class="form-group">
                    <label for="username">User:</label>
                    <input type="text" class="form-control" id="username" ng-model="username">
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" id="pwd" ng-model="password">
                </div>
                <div class="form-group">
                    <label for="balance">Balance:</label>
                    <input type="text" class="form-control" id="balance" ng-model="balance">
                </div>
                <button type="button" ng-click="createAccount()" class="btn btn-primary">Create</button>
            </div>
            
            <table class="table" ng-if="accounts.length > 0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="account in accounts">
                        <td>{{account.Username}}</td>
                        <td>{{account.Balance}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">Deposit To Account</div>
        <div class="panel-body">
            <div class="form-inline">
                <div class="form-group">
                    <label for="username">User:</label>
                    <input type="text" class="form-control" id="username">
                </div>
                <div class="form-group">
                    <label for="balance">Balance:</label>
                    <input type="text" class="form-control" id="balance">
                </div>
                <button type="button" class="btn btn-primary">Deposit</button>
            </div>
        </div>
    </div>
    
    <div class="panel panel-primary">
        <div class="panel-heading">Richest Traders</div>
        <div class="panel-body">
            
        </div>
    </div>
</body>
</html>
