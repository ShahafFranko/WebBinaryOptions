@{
    Layout = "~/Views/Shared.cshtml";
}

<head>
    <link href="~/Content/index.css" rel="stylesheet">
    <script src="~/Scripts/Controllers/loginController.js"></script>
    <title>Login</title>
</head>
<body ng-app="binaryOptions" ng-controller="loginController">
    <div class="jumbotron vertical-center">
        <div class="container">
            <div class="login">
                <div class="form-group">
                    <label for="username">User:</label>
                    <input type="text" class="form-control" id="username" ng-model="username">
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" id="pwd" ng-model="password">
                </div>
                <button type="button" ng-click="login()" class="btn btn-primary">Login</button>
            </div>
        </div>
    </div>
</body>
